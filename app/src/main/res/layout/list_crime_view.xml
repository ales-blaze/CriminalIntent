<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/crime_list_title_text_view"
        android:layout_toLeftOf="@id/crime_list_solved_check_box"
        android:padding="4dp"
        tools:text="crime title"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/crime_list_date_text_view"
        android:layout_below="@id/crime_list_title_text_view"
        android:layout_toLeftOf="@id/crime_list_solved_check_box"
        tools:text="crime date"
        android:padding="4dp"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/crime_list_solved_check_box"
        android:layout_alignParentEnd="true"
        android:padding="4dp"
        />
</RelativeLayout>